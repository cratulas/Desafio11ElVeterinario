<p id="notice"><%= notice %></p>

<h2 class="mb-5"> Name: <%= @pet.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Id_Consulta</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @pet.pet_histories.each do |animal| %>
      <tr>
        <td><%= animal.id %></td>
        <td><%= animal.heigth %></td>
        <td><%= animal.weight %></td>
        <td><%= animal.description %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>


<table class= "table my-5">
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>


    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avg_weight %></td>
      <td><%= @pet.avg_height %></td>
      <td><%= @pet.max_weight %></td>
      <td><%= @pet.max_height%></td>

  
    </tr>
  </tbody>
</table>

