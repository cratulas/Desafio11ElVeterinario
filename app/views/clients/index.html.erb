<p id="notice"><%= notice %></p>

<h1 class="my-5 text-center" >Clients</h1>

<table class= "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Total pets</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.total_pets%></td>
        <td><%= link_to 'Show', client , class: "btn btn-primary "%></td>
        <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path, class: "btn btn-primary " %>
